# EditorConfig configuration file
# https://editorconfig.org

root = true

# All files use UTF-8 encoding, line ending is LF
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript/TypeScript files
[*.{js,ts,jsx,tsx,mjs,cjs}]
indent_style = space
indent_size = 2
max_line_length = 100

# JSON/YAML files
[*.{json,yml,yaml,toml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = off

# Git related files
[.git*]
indent_style = space
indent_size = 2

# Configuration files
[*.{rc,config}]
indent_style = space
indent_size = 2
